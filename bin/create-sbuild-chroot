#!/bin/bash

eval $(dpkg-architecture)

SUITE=$1
MIRROR=$2

if [ "x${SUITE}" == "x" ]; then
    echo "need a suite"
    exit 1
fi
if [ "x${MIRROR}" == "x" ]; then
    MIRROR="http://debian.lcs.mit.edu/debian/"
fi

POPDIR=$(pwd)
ARCH=${DEB_BUILD_ARCH}
BUILD_DIR=$(mktemp -d)

echo "Building:"
echo ""
echo "   Suite:     ${SUITE}"
echo "   Mirror:    ${MIRROR}"
echo "   Arch:      ${ARCH}"
echo "   Build-dir: ${BUILD_DIR}"
echo ""
echo "press enter to run."
read foo

cd ${BUILD_DIR}

echo "Running sudo debootstrap."
sudo debootstrap \
    --variant=buildd \
    --verbose \
    --arch=${ARCH} \
    ${SUITE} \
    ${SUITE} \
    ${MIRROR}

tar -zcvf ${SUITE}-image-${ARCH}.tar.gz ${SUITE}

cd ${POPDIR}
rm -rf ${BUILD_DIR}
